<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>

  <!-- MySQL metastore configutacion -->
  <property>
    <name>javax.jdo.option.ConnectionURL</name>
    <value>jdbc:mysql://<%= node['hive']['mysql']['host'] %>/metastore</value>
  </property>

  <property>
    <name>javax.jdo.option.ConnectionDriverName</name>
    <value>com.mysql.jdbc.Driver</value>
  </property>

  <property>
    <name>javax.jdo.option.ConnectionUserName</name>
    <value><%= node['hive']['mysql']['username'] %></value>
  </property>

  <property>
    <name>javax.jdo.option.ConnectionPassword</name>
    <value><%= node['hive']['mysql']['password'] %></value>
  </property>

  <property>
    <name>datanucleus.autoCreateSchema</name>
    <value>false</value>
  </property>

  <property>
    <name>datanucleus.fixedDatastore</name>
    <value>true</value>
  </property>

  <property>
    <name>hive.stats.autogather</name>
    <value>false</value>
  </property>
  <!-- End MySQL metastore configutacion -->

</configuration>
